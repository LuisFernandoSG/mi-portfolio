---
// src/components/sections/Websites.astro
import { AnimatedSection } from "../../components/ui/AnimatedSection.tsx";
import Badge from "../ui/Badge.astro";
import type { CONTENT } from "../../data/portfolioData";

interface Props {
    content: typeof CONTENT['es']; 
}

const { content } = Astro.props;
const WEBSITES = content.WEBSITES;
const UI = content.UI;
---

<section id="sitios-web" class="max-w-5xl mx-auto px-6 py-16">
  <AnimatedSection client:visible>
    <h3 class="text-3xl font-bold text-sky-400 mb-12">{UI.websitesTitle}</h3>
  </AnimatedSection>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {WEBSITES.map((site, index) => (
      <AnimatedSection client:visible delay={index * 0.2}>
        <a 
          href={site.url} 
          target="_blank" 
          rel="noopener noreferrer"
          class="block bg-gray-800/50 border border-gray-700/50 rounded-xl p-6 shadow-lg 
                 hover:bg-gray-800 hover:border-sky-600 transition-all duration-300 group"
        >
          <div class="flex justify-between items-start mb-3">
            <h4 class="text-xl font-bold text-white group-hover:text-sky-400 transition-colors">
              {site.name}
            </h4>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-sky-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
          </div>

          <p class="text-gray-300 mb-4">{site.description}</p>

          <div class="flex flex-wrap gap-2">
            {site.stack.map((tech) => (
              <Badge>{tech}</Badge>
            ))}
          </div>
        </a>
      </AnimatedSection>
    ))}
  </div>
</section>